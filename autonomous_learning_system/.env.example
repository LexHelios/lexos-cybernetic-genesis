
# Environment Variables for Autonomous Learning System

# OpenAI API Key (required for AI-powered analysis)
OPENAI_API_KEY=your_openai_api_key_here

# Twilio Configuration (optional - for communication features)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_SENDER_NUMBER=+1234567890
DEFAULT_RECIPIENT_NUMBER=+1234567890

# System Configuration
LEARNING_INTENSITY=medium
MAX_CONCURRENT_TASKS=10
LOG_LEVEL=INFO

# Rate Limiting
DEFAULT_CRAWL_DELAY=2
MAX_REQUESTS_PER_MINUTE=30
API_RATE_LIMIT=100

# Memory System Path
MEMORY_PATH=/home/ubuntu/lexos-cybernetic-genesis

# Optional API Keys
NEWSAPI_KEY=your_newsapi_key
GITHUB_TOKEN=your_github_token

# Database Configuration (optional)
DATABASE_URL=sqlite:///data/learning.db
