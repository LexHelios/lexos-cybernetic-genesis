[Unit]
Description=LexOS Backend API Service
After=network.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/lexos-genesis/backend-production
Environment="NODE_ENV=production"
Environment="PORT=9001"
ExecStart=/usr/bin/node server.js
Restart=always
RestartSec=10
StandardOutput=append:/var/log/lexos/backend.log
StandardError=append:/var/log/lexos/backend-error.log

[Install]
WantedBy=multi-user.target