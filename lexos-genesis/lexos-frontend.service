[Unit]
Description=LexOS Frontend Service
After=network.target

[Service]
Type=simple
User=user
WorkingDirectory=/home/user/lexos-genesis
ExecStart=/usr/bin/npx serve -s dist -l 3000
Restart=always
RestartSec=10
StandardOutput=append:/var/log/lexos/frontend.log
StandardError=append:/var/log/lexos/frontend-error.log

[Install]
WantedBy=multi-user.target