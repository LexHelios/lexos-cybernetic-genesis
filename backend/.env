
# NEXUS Genesis Production Configuration
NODE_ENV=production
PORT=9000

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Configuration - PRODUCTION READY
JWT_SECRET=NEXUS_GENESIS_QUANTUM_SECURE_JWT_SECRET_V2024_CHANGE_IN_PRODUCTION_DEPLOYMENT
JWT_EXPIRY=24h

# Application Info
APP_VERSION=2.1.0-nexus-genesis

# Authentication - CHANGE THESE IN PRODUCTION
ADMIN_PASSWORD=NEXUS_ADMIN_SECURE_2024
ADMIN_EMAIL=admin@nexus-genesis.com
OPERATOR_PASSWORD=NEXUS_OPERATOR_SECURE_2024
OPERATOR_EMAIL=operator@nexus-genesis.com

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# System Monitoring
METRICS_COLLECTION_INTERVAL=30000

# Logging
LOG_LEVEL=info

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Production Configuration
DATABASE_PATH=./data/nexus-genesis.db
BACKUP_INTERVAL=3600000
MAX_CONCURRENT_AGENTS=25
SYSTEM_MONITORING_ENABLED=true

# Neural Network Configuration
GPU_MONITORING_ENABLED=true
GPU_MEMORY_THRESHOLD=85
GPU_TEMP_THRESHOLD=80

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=500

# File Upload Limits
MAX_FILE_SIZE=500MB
ALLOWED_FILE_TYPES=txt,json,csv,md,py,js,ts,pdf,docx

# Performance Optimization
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true
