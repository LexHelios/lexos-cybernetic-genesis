# Backend Configuration
NODE_ENV=production
PORT=3001

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

# JWT Configuration - CHANGE THIS IN PRODUCTION!
JWT_SECRET=NEXUS_GENESIS_SECURE_KEY_CHANGE_IMMEDIATELY_IN_PRODUCTION_ENV
JWT_EXPIRY=24h

# Application Info
APP_VERSION=2.0.0-nexus

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434

# System Monitoring
METRICS_COLLECTION_INTERVAL=60000

# Logging
LOG_LEVEL=info

# Security
MAX_LOGIN_ATTEMPTS=5
LOGIN_LOCKOUT_DURATION=900000

# Default User Credentials - CHANGE IN PRODUCTION!
ADMIN_PASSWORD=NEXUS_ADMIN_CHANGE_IMMEDIATELY
ADMIN_EMAIL=admin@sharma-legacy.com
OPERATOR_PASSWORD=NEXUS_OPERATOR_CHANGE_IMMEDIATELY
OPERATOR_EMAIL=operator@sharma-legacy.com

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# Production Configuration
DATABASE_PATH=./data/lexos.db
BACKUP_INTERVAL=3600000
MAX_CONCURRENT_AGENTS=10
SYSTEM_MONITORING_ENABLED=true

# H100 GPU Configuration
GPU_MONITORING_ENABLED=true
GPU_MEMORY_THRESHOLD=90
GPU_TEMP_THRESHOLD=85

# WebSocket Configuration
WS_HEARTBEAT_INTERVAL=30000
WS_MAX_CONNECTIONS=100

# File Upload Limits
MAX_FILE_SIZE=100MB
ALLOWED_FILE_TYPES=txt,json,csv,md,py,js,ts