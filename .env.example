# LexOS Genesis Environment Configuration
# Copy this file to .env and update with your values

# Server Configuration
NODE_ENV=production
PORT=9000
FRONTEND_URL=https://lexcommand.ai

# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/lexos
REDIS_URL=redis://localhost:6379

# Security Configuration
JWT_SECRET=your-secure-jwt-secret-minimum-32-characters
JWT_EXPIRY=24h
SESSION_SECRET=your-secure-session-secret-minimum-32-characters

# Authentication
ADMIN_EMAIL=admin@yourdomain.com
ADMIN_PASSWORD=change-this-secure-password
OPERATOR_EMAIL=operator@yourdomain.com
OPERATOR_PASSWORD=change-this-secure-password

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434

# GPU Configuration
ENABLE_GPU_MONITORING=true
GPU_MEMORY_LIMIT=75

# Security Features
ENABLE_MFA=true
MFA_ISSUER=LexOS-Genesis
ENABLE_RATE_LIMITING=true
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Monitoring
ENABLE_METRICS=true
METRICS_PORT=9091

# Email Configuration (optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM="LexOS Genesis <noreply@lexcommand.ai>"

# External Services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
GOOGLE_API_KEY=

# Feature Flags
ENABLE_CONSCIOUSNESS_MODE=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_KNOWLEDGE_GRAPH=true
ENABLE_VOICE_COMMANDS=true