# LexOS Genesis Open Source Only Configuration
# No proprietary API keys needed!

# Node Environment
NODE_ENV=production
PORT=9000
FRONTEND_URL=https://localhost:8080

# Open Source Databases
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=lexos_genesis
DATABASE_USER=lexos_user
DATABASE_PASSWORD=changeme123
DATABASE_SSL=false

REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=changeme456

# Security (generate your own)
JWT_SECRET=your-development-jwt-secret-change-in-production
SESSION_SECRET=your-development-session-secret-change-in-production
ENCRYPTION_KEY=your-32-byte-key

# Ollama for LLMs (already installed)
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3:latest

# LocalAI (OpenAI compatible)
LOCALAI_HOST=http://localhost:8080
LOCALAI_API_KEY=not-needed

# Qdrant Vector Database
QDRANT_HOST=localhost
QDRANT_PORT=6333

# Disable all proprietary services
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
COHERE_API_KEY=
PINECONE_API_KEY=
SENTRY_DSN=

# Enable open source features
USE_OPENSOURCE_ONLY=true
ENABLE_OLLAMA=true
ENABLE_LOCAL_MODELS=true

# Admin defaults (CHANGE THESE!)
ADMIN_EMAIL=admin@localhost
ADMIN_INITIAL_PASSWORD=admin123